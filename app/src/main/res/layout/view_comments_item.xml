<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/margin_middle"
    android:layout_marginRight="@dimen/margin_middle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        app:cardCornerRadius="@dimen/corner_radius_default"
        android:background="@android:color/white"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.frodo.github.view.OcticonView
                android:id="@+id/user_ov"
                style="@style/OcticonViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/item_height_default"
                android:paddingLeft="@dimen/margin_middle"
                android:paddingRight="@dimen/margin_middle"
                app:iconSize="@dimen/image_size_default"
                app:iconPadding="@dimen/margin_middle"
                app:iiv_icon="oct_github_mark" />

            <View style="@style/LineStyle" />

            <us.feras.mdv.MarkdownView
                android:id="@+id/body_mdv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_middle" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>